{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Vercel Functions",
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["api/**/*"],
  "exclude": ["src/**/*", "node_modules"]
}
